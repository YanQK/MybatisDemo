<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="userMapper">

    <insert id="addUser" parameterType="com.gs.mybatis.bean.User">
        insert into user(name,age) values(#{name},#{age})
    </insert>

    <select id="retrieveUser" parameterType="int" resultType="com.gs.mybatis.bean.User">
        select * from User where id=#{id}
    </select>

    <select id="retrieveAllUser" resultType="com.gs.mybatis.bean.User">
        select * from User
    </select>

    <update id="updateUser" parameterType="com.gs.mybatis.bean.User">
        update user set name=#{name},age=#{age} where id=#{id}
    </update>

    <delete id="deleteUser" parameterType="com.gs.mybatis.bean.User">
        delete from user where name=#{name}
    </delete>

</mapper>